{
  "tasks": [
    {
      "label": "1. Activate Env",
      "type": "shell",
      "windows": {
        "command": ".\\.venv\\Scripts\\activate.bat"
      },
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "2. Install Poetry",
      "type": "shell",
      "command": "poetry install",
      "dependsOn": ["1. Activate Env"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "3. Build",
      "type": "shell",
      "command": "poetry build",
      "dependsOn": ["2. Install Poetry"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "4. Deactivate Env",
      "type": "shell",
      "command": "exit",
      "dependsOn": ["3. Build"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "5. Install Globally",
      "type": "shell",
      "windows": {
        "command": "python -m pip install ${workspaceFolder}/dist/${workspaceFolderBasename}-1.0.0.tar.gz"
      },
      "dependsOn": ["4. Deactivate Env"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ],
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0"
}
